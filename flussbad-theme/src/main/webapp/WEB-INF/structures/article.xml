<root available-locales="de_DE" default-locale="de_DE">
<!--
    article.xml: A structure for a content object of 
    type "article", which is the standard structure for all
    long texts.
    
    Created:    2015-10-01 18:55 by Christian Berndt
    Modified:   2016-06-12 22:05 by Christian Berndt
    Version:    1.0.3
    
    Please note: Although this structure is stored in the 
    site's context it's source is managed via git. Whenever you 
    change the structure online make sure that you commit your 
    changes to the flussbad-modules repo, too.
-->
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="headline" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="large">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Überschrift]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib Deinem Beitrag eine knappe aber aussagekräftige Überschrift.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="teaser" readOnly="false" repeatable="false" required="false" showLabel="true" type="textarea" width="large">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Teaser]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Der Teaser erscheint als einspaltiger Textblock unterhalb der Überschrift und wird in Listendarstellungen als Zusammenfassung verwendet.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="boolean" indexType="keyword" localizable="true" name="showToc" readOnly="false" repeatable="false" required="false" showLabel="true" type="checkbox" width="">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Inhaltsverzeichnis anzeigen?]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[false]]>
            </entry>
            <entry name="tip">
                <![CDATA[Markiere diese Option, wenn Du ein Inhaltsverzeichnis für diesen Beitrag anzeigen möchtest. Das Inhaltsverzeichnis wird auf Grundlage der von Dir vergebenen Zwischenüberschriften erstellt.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="section" readOnly="false" repeatable="true" required="false" showLabel="true" type="text" width="medium">
		<dynamic-element dataType="string" indexType="keyword" localizable="true" name="label" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="medium">
             <meta-data locale="de_DE">
                 <entry name="label">
                     <![CDATA[Beschriftung]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Wenn nötig, kannst Du hier dem Abschnitt eine von der Überschrift abweichende Beschriftung geben. Das ist besonders dann nützlich, wenn die Überschrift zu lang für vertikale Navigation mit dem Scrollspy ist.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="html" fieldNamespace="ddm" indexType="keyword" localizable="true" name="body" readOnly="false" repeatable="false" required="false" showLabel="true" type="ddm-text-html" width="large">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Textkörper]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Schreibe hier Deinen Text und bemühe Dich, Deinen Beitrag sinnvoll in überschaubare Abschnitte zu gliedern.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="boolean" indexType="keyword" localizable="true" name="imageAboveTheText" readOnly="false" repeatable="false" required="false" showLabel="true" type="checkbox" width="">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Abbildung(en) vor dem Text]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[false]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Entscheide, ob die Abbildung(en) vor oder nach dem Text (Standard) angezeigt werden sollen]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="document-library" fieldNamespace="ddm" indexType="keyword" localizable="true" name="image" readOnly="false" repeatable="true" required="false" showLabel="true" type="ddm-documentlibrary" width="">
            <dynamic-element dataType="string" indexType="keyword" localizable="true" name="caption" readOnly="false" repeatable="false" required="false" showLabel="true" type="textarea" width="small">
                <meta-data locale="de_DE">
                    <entry name="label">
                        <![CDATA[Bildunterschrift]]>
                    </entry>
                    <entry name="predefinedValue">
                        <![CDATA[]]>
                    </entry>
                    <entry name="tip">
                        <![CDATA[Gib jedem Bild eine knappe und aussagekräftige Bildunterschrift.]]>
                    </entry>
                </meta-data>
            </dynamic-element>
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Abbildung]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Wähle eine oder mehrere Abbildungen aus, die in diesem Absatz angezeigt werden.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="string" indexType="keyword"
            localizable="true" multiple="false" name="service" readOnly="false"
            repeatable="false" required="false" showLabel="true" type="select"
            width="">
            <dynamic-element name="option3753" type="option"
                value="http:&#047;&#047;www.youtube.com&#047;oembed?url=">
                <meta-data locale="de_DE">
                    <entry name="label">
                        <![CDATA[youtube]]>
                    </entry>
                </meta-data>
            </dynamic-element>
            <dynamic-element name="option3754" type="option"
                value="https:&#047;&#047;vimeo.com&#047;api&#047;oembed.json?url=">
                <meta-data locale="de_DE">
                    <entry name="label">
                        <![CDATA[vimeo]]>
                    </entry>
                </meta-data>
            </dynamic-element>
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Service]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[[""]]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Wähle den Dienst aus, von dem Du das Video einbetten möchtest.]]>
                </entry>
            </meta-data>
        </dynamic-element>
        <dynamic-element dataType="string" indexType="keyword"
            localizable="true" name="url" readOnly="false" repeatable="false"
            required="false" showLabel="true" type="text" width="small">
            <meta-data locale="de_DE">
                <entry name="label">
                    <![CDATA[Video URL]]>
                </entry>
                <entry name="predefinedValue">
                    <![CDATA[]]>
                </entry>
                <entry name="tip">
                    <![CDATA[Gib hier den URL des Videos ein. Der URL muss entweder mit http:// oder https:// beginnen.]]>
                </entry>
            </meta-data>
        </dynamic-element>        
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Abschnitt]]>
            </entry>
            <entry name="predefinedValue">
                <![CDATA[]]>
            </entry>
            <entry name="tip">
                <![CDATA[Gib dem Abschnitt eine knappe aber aussagekräftige Zwischenüberschrift.]]>
            </entry>
        </meta-data>
    </dynamic-element>
    <dynamic-element dataType="string" indexType="keyword" localizable="true" name="tags" readOnly="false" repeatable="false" required="false" showLabel="true" type="text" width="medium">
        <meta-data locale="de_DE">
            <entry name="label">
                <![CDATA[Galerie Tags]]>
            </entry>
            <entry name="tip">
                <![CDATA[Trage hier ein oder mehrere Tags ein, auf deren Grundlage die Mediengalerie erstellt wird. Mehrere Tags werden durch Kommata von einander getrennt.]]>
            </entry>
        </meta-data>
    </dynamic-element>
</root>